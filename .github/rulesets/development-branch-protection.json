{
  "name": "Development Branch Protection",
  "description": "Protecci√≥n para branches de desarrollo del proyecto CRM Pyme",
  "target": "branch",
  "enforcement": "active",
  "conditions": {
    "ref_name": {
      "include": [
        "develop",
        "development",
        "dev"
      ]
    }
  },
  "rules": [
    {
      "type": "pull_request",
      "parameters": {
        "required_approving_review_count": 1
      }
    },
    {
      "type": "status_check",
      "parameters": {
        "required_status_checks": [
          {
            "context": "dotnet-build"
          }
        ]
      }
    }
  ]
} 