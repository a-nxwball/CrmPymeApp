{
  "name": "Tag Protection",
  "description": "Protecci√≥n para tags de versiones del proyecto CRM Pyme",
  "target": "tag",
  "enforcement": "active",
  "conditions": {
    "ref_name": {
      "include": [
        "v*",
        "release-*"
      ]
    }
  },
  "rules": [
    {
      "id": "restrict-tag-pushes",
      "type": "push",
      "parameters": {
        "bypass_mode": "off"
      }
    },
    {
      "id": "require-tag-signatures",
      "type": "commit_signature",
      "parameters": {}
    },
    {
      "id": "restrict-tag-creation",
      "type": "tag",
      "parameters": {
        "allow_force_pushes": false,
        "allow_deletions": false
      }
    }
  ],
  "bypass_actors": [
    {
      "actor_id": "a-nxwball",
      "actor_type": "User",
      "bypass_mode": "always"
    }
  ]
} 