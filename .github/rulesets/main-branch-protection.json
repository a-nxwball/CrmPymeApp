{
  "name": "Main Branch Protection",
  "description": "Reglas de protecci√≥n para la rama principal del proyecto CRM Pyme",
  "target": "branch",
  "enforcement": "active",
  "conditions": {
    "ref_name": {
      "include": [
        "main",
        "master"
      ]
    }
  },
  "rules": [
    {
      "type": "pull_request",
      "parameters": {
        "required_approving_review_count": 1
      }
    },
    {
      "type": "status_check",
      "parameters": {
        "required_status_checks": [
          {
            "context": "dotnet-build"
          }
        ]
      }
    },
    {
      "type": "linear_history",
      "parameters": {}
    }
  ]
} 